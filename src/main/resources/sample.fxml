<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet default.css?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.PropertySheet?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<BorderPane prefHeight="500.0" prefWidth="700" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<center>
			<TabPane>
				<Tab text="Design" closable="false">
					<SplitPane id="splitPane" dividerPositions="0.6" prefHeight="160.0" prefWidth="300" BorderPane.alignment="CENTER">
						<AnchorPane id="currentStateView" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
							<Label id="currentStateLabel" text="hi" prefWidth="300" textAlignment="RIGHT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
						</AnchorPane>
						<AnchorPane id="currentTransitionsView" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="200">
							<ListView id="transitionsListView" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
						</AnchorPane>
					</SplitPane>
				</Tab>
				<Tab text="XML" closable="false">
					<TextArea fx:id="xmlViewer" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
				</Tab>
			</TabPane>
		</center>
		<top>
			<ToolBar id="toolbar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
				<SplitMenuButton id="splitOpenButton" mnemonicParsing="false" text="Open..."/>
			</ToolBar>
		</top>
		<left>
			<Accordion id="accordion" styleClass="big-border" BorderPane.alignment="CENTER">
				<panes>
					<TitledPane animated="false" text="States">
						<ListView id="statesListView" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
					</TitledPane>
					<TitledPane id="dataModelPropertiesPane"  animated="false" text="Data Model">
						<!--Must be constructed with the observable list from the controller-->
						<!--<PropertySheet id="dataModelPropertiesView" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>-->
					</TitledPane>
				</panes>
			</Accordion>
		</left>
	</BorderPane>
</AnchorPane>
